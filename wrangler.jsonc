{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "gaiaprotocol-website",
	"main": "worker/index.ts",
	"compatibility_date": "2025-07-12",
	"placement": {
		"mode": "smart"
	},
	"assets": {
		"directory": "./public",
		"not_found_handling": "single-page-application",
		"run_worker_first": [
			"/api/*"
		]
	},
	"observability": {
		"enabled": true
	},
	"services": [
		{
			"binding": "API_WORKER",
			"service": "api"
		}
	],
	"rules": [
		{
			"type": "Data",
			"globs": [
				"**/*.bin",
				"**/*.png"
			]
		}
	]
}